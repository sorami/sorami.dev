---
import type { TimelineItem } from "../types";
type Props = TimelineItem;
const { url, date, type, title, description } = Astro.props;
const { hostname } = new URL(url);

const iconDict: Record<string, string> = {
  article: "i-heroicons-document-text-20-solid",
  paper: "i-heroicons-academic-cap-20-solid",
  presentation: "i-heroicons-presentation-chart-bar-20-solid",
  podcast: "i-heroicons-radio-20-solid",
};
---

<a href={url} target="_blank" rel="noreferrer">
  <div class={`timeline-item-container timeline-type-${type}`}>
    <div class="timeline-dot"></div>
    <div class="timeline-meta">
      <div class={`icon ${iconDict[type]} mr-1.5 opacity-50`}></div>
      <time datetime="{{ item.date }}">{date}</time>
      <div class="timeline-hostname">{hostname}</div>
    </div>
    <h2 class="timeline-title">
      {title}
    </h2>
    {description && <div class="timeline-description">{description}</div>}
  </div>
</a>

<style lang="scss">
  a {
    text-decoration: none;
  }

  .timeline-item-container {
    border-left: solid 2px var(--c-border);
    padding-left: 18px;
    padding-top: 1em;
    padding-bottom: 1em;
    display: block;
    position: relative;
    transition: border-color 300ms ease;

    .icon {
      color: var(--c-text);
      transition: opacity 300ms ease;
    }
    &:hover .icon {
      opacity: 1;
    }

    .timeline-dot {
      position: absolute;
      display: inline-flex;
      left: -6px;
      top: 20px;
      width: 10px;
      height: 10px;
      border-radius: 50%;
      border: 2px solid var(--c-border);
      background: var(--c-border);
      transition: all 300ms ease;
    }

    .timeline-meta {
      display: flex;
      align-items: center;

      time {
        font-size: 1em;
        color: var(--c-text);
        opacity: 0.5;
        transition: opacity 300ms ease;
      }

      .timeline-hostname {
        margin-left: 0.5em;
        font-size: 0.9em;
        color: var(--c-text);
        opacity: 0.35;
        transition: opacity 300ms ease, color 300ms ease;
      }
    }

    h2.timeline-title {
      margin: 0.5rem 0;
      font-size: 1em;
      font-weight: 500;
      letter-spacing: 0;
      opacity: 0.8;
      color: var(--c-text);
      transition: opacity 300ms ease, color 300ms ease;
    }

    .timeline-description {
      margin-top: -0.1em;
      font-size: 0.8em;
      opacity: 0.6;
      letter-spacing: -0.02em;
      color: var(--c-text);
      transition: opacity 300ms ease;
    }

    &:hover {

      .timeline-dot {
        border-color: var(--c-highlight);
        background: var(--c-highlight);
        transform: scale(1.3);
      }

      .timeline-meta time {
        opacity: 1;
      }

      .timeline-meta .timeline-hostname {
        opacity: 0.6;
      }

      h2.timeline-title {
        opacity: 1;
        color: var(--c-highlight);
      }

      .timeline-description {
        opacity: 0.4;
      }
    }
  }
</style>
