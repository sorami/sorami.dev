---
const { title, description, url, image } = Astro.props;
---

<a href={url} target="_blank" rel="noreferrer">
  <div class="container">
    <div class="thumbnail">
      <img src={image} alt="thumbnail" />
    </div>
    <div class="text">
      <span class="title">{title}</span>
      <span class="description">{description}</span>
    </div>
  </div>
</a>

<style lang="scss">
  a {
    text-decoration: none;
    color: var(--c-text);
  }

  .container {
    display: flex;
    flex-direction: column;
    row-gap: 0.5em;

    .thumbnail {
      img {
        width: 100%;
        aspect-ratio: 4 / 3;
        border-radius: 4%;
        object-fit: cover;
      }
    }

    &:hover {
      .thumbnail {
        opacity: 0.5;
      }
      .text {
        .title {
          color: var(--c-highlight);
        }
      }
    }

    .text {
      font-size: 0.75em;
      padding: 0 0.25em;

      .title {
        font-weight: 700;
      }

      .description {
        opacity: 0.8;
      }
    }
  }
</style>
