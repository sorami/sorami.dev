---
import WorkItem from "./WorkItem.astro";
import { works } from "../data/works";
---

<div id="works" class="max-w-6xl m-auto">
  {
    works.map((d) => (
      <WorkItem
        url={d.url}
        type={d.type}
        title={d.title}
        description={d.description}
        image={d.image}
      />
    ))
  }
</div>

<style lang="scss">
  #works {
    margin-top: 4em;

    --auto-grid-min-size: 200px;

    display: grid;
    grid-template-columns: repeat(
      auto-fill,
      minmax(var(--auto-grid-min-size), 1fr)
    );
    grid-gap: 1.25em;
  }
</style>
