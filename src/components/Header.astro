---
const pathname = Astro.url.pathname;
const pages = [
  { path: "/", name: "timeline" },
  { path: "/works", name: "works" },
  { path: "/garden", name: "garden" },
  { path: "https://b.sorami.dev", name: "blog" },
  { path: "/about", name: "about" },
];
---

<header>
  <div id="caption">sorami.dev</div>
  <div id="navigation">
    {
      pages.map((d) => (
        <a
          href={d.path}
          rel="prefetch"
          class={pathname === d.path ? "active" : ""}
        >
          {d.name}
        </a>
      ))
    }
  </div>
</header>

<style lang="scss">
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9em;

    #caption {
      opacity: 0.6;
      font-weight: 700;
      pointer-events: none;
    }

    #navigation {
      display: flex;
      flex-direction: row;
      justify-content: center;
      column-gap: 1em;

      a {
        opacity: 0.4;
        text-decoration: none;

        &.active {
          text-decoration: underline;
          pointer-events: none;
          opacity: 0.7;
        }

        &:hover {
          opacity: 1;
        }
      }
    }
  }
</style>
