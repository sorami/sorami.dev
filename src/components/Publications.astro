---
import { timelineItems } from "../data/timeline";

const publicationItems = timelineItems.filter((d) => d.type === "paper");
---

<div id="publications">
  {
    publicationItems.map((d) => (
      <div class="pub">
        <a href={d.url} target="_blank" rel="noreferrer">
          <span class="title">{d.title}</span> {d.description}, {d.date}.
        </a>
      </div>
    ))
  }
</div>

<style lang="scss">
  #publications {
    margin-top: 2em;
    display: flex;
    flex-direction: column;
    row-gap: 0.75em;

    .pub {
      font-size: 0.7em;

      a {
        text-decoration: none;
        color: var(--c-text);

        &:hover {
          text-decoration: underline;
        }

        .title {
          font-weight: 700;
        }
        &:hover .title {
          color: var(--c-highlight);
        }
      }
    }
  }
</style>
