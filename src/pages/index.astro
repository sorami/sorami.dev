---
import Layout from "../layouts/Layout.astro";
import Works from "../components/Works.astro";

const title = "sorami.dev";
const description =
  "Interested in tools for thought. / 思考のための道具に興味があります。";
---

<Layout title={title} description={description}>
  <div id="about">
    <div id="icon"></div>
    <h1>HISAMOTO Sorami</h1>
    <div id="text">
      <p>Interested in <strong>tools for thought</strong>.</p>
      <p><strong>思考のための道具</strong>に興味があります。</p>
    </div>
  </div>

  <Works />

  <div id="more"><a href="/timeline/">... more</a></div>
</Layout>

<style lang="scss">
  #about {
    max-width: 700px;
    margin: 2em auto;
    padding: 0 1em;
    text-align: center;

    #icon {
      background: url("/_assets/sorami.webp") no-repeat;
      background-size: 100px;
      width: 100px;
      height: 100px;
      border-radius: 43%;
      display: inline-block;
      transition: filter 1s ease;

      &:hover {
        filter: blur(15px);
      }
    }

    h1 {
      margin-top: 1em;
      font-size: 1.4em;
      font-weight: 700;
      letter-spacing: 0.1em;
    }

    #text {
      margin: 1em 0;

      p {
        font-size: 0.9em;
        line-height: 1em;
        opacity: 0.8;

        strong {
          font-weight: normal;
        }
      }

      &:hover p strong {
        color: var(--c-highlight);
      }
    }
  }

  #more {
    margin-top: 1.5em;
    text-align: center;
    a {
      text-decoration: none;
      &:hover {
        text-decoration: underline;
      }
    }
  }
</style>
