---
import Layout from "../layouts/Layout.astro";

const title = "about";
const description =
  "Interested in tools for thought. / 思考のための道具に興味があります。";

const items = [
  {
    name: "Twitter",
    href: "https://twitter.com/sorami",
  },
  {
    name: "Observable",
    href: "https://observablehq.com/@sorami",
  },
  {
    name: "GitHub",
    href: "https://github.com/sorami",
  },
  {
    name: "Zenn",
    href: "https://zenn.dev/sorami",
  },
  {
    name: "Qiita",
    href: "https://qiita.com/sorami",
  },
  {
    name: "Speaker Deck",
    href: "https://speakerdeck.com/sorami/",
  },
  {
    name: "Google Scholar",
    href: "https://scholar.google.com/citations?user=7DTtrgIAAAAJ",
  },
  {
    name: "LinkedIn",
    href: "https://www.linkedin.com/in/sorami/",
  },
  {
    name: "Keybase",
    href: "https://keybase.io/sorami",
  },
];
---

<Layout title={title} description={description}>
  <div id="about">aboutページ</div>
  <div id="link-container">
    {
      items.map((d) => (
        <div>
          <a href={d.href} target="_blank" rel="noreferrer">
            {d.name}
          </a>
        </div>
      ))
    }
  </div>
</Layout>

<style lang="scss">
  #about {
    max-width: 700px;
    margin: 3em auto;
    padding: 0 1em;
    text-align: center;
  }

  #link-container {
    max-width: 450px;
    margin: 3em auto;
    text-align: center;
    font-size: 0.95em;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1em 0;

    a {
      opacity: 0.5;
      text-decoration: none;

      &:hover {
        opacity: 1;
        font-weight: 700;
      }
    }
  }
</style>
