---
import Layout from "@/layouts/Layout.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate: string;
  };
}

const {
  content: { title, description, pubDate },
} = Astro.props;
---

<Layout title={title} description={description}>
  <article>
    <div class="top">
      <h1>{title}</h1>
      {pubDate && <time>{pubDate}</time>}
    </div>
    <div class="text"><slot /></div>
  </article>
</Layout>

<style lang="scss">
  .top {
    margin-bottom: 2em;
    text-align: center;

    h1 {
      font-size: 1.2em;
      font-weight: 700;
    }

    time {
      font-size: 0.8em;
      opacity: 0.7;
    }
  }

  .text {
    h2 {
      font-size: 1.1em;
    }
    h3 {
      font-size: 1em;
    }
  }
</style>
